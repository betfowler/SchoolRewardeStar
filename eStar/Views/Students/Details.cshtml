        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prefix)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prefix)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.First_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.First_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User_Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User_Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year_Group)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year_Group)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tutor_Group)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tutor_Group)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total_Points)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total_Points)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

    </dl>
</div>

<hr />
<h5>Student Guardians</h5>
<table class="table">
    <tr>
        <th>
            Guardian ID
        </th>
        <th>
            Email Address
        </th>
        <th>
            Prefix
        </th>
        <th>
            First Name
        </th>
        <th>
            Surname
        </th>
    </tr>
    @foreach (var item in Model.StudentGuardians)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Guardian_User_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guardians.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guardians.Prefix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guardians.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guardians.Surname)
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.User_ID }) |
