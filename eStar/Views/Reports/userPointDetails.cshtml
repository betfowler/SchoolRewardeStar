@model IEnumerable<eStar.Models.Award>

@{
    ViewBag.Title = "userPointDetails";
}

<a href="@Url.Action("Index","Reports")"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Back To Reports</a>

<h2>View Individual Student Points</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <label>Select A Student</label>
        @Html.DropDownList("User_ID")
        <label>View Awards From</label>
        <input type="date" name="start" max="end" />
        <label>To</label>
        <input type="date" name="end" min="start" />
        <label>View All Awards Received</label>
        <input type="checkbox" name="all" />
        <input type="submit" value="Search" class="btn btn-primary"/>
    </div>
}

<div class="row" id="smlBreak"></div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AwardDate)
        </th>
        <th>
            Subject
        </th>
        <th>
            Staff Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Num_Points)
        </th>
        <th>
            Reward Category
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reward_Comment)
        </th>
    </tr>
    @foreach (var award in Model.OrderByDescending(m => m.AwardDate))
    {
        <tr>
            <td>
                @Html.DisplayFor(awardModel => award.AwardDate)
            </td>
            <td>
                @Html.DisplayFor(awardModel => award.Subject.Subject_Name)
            </td>
            <td>
                @Html.DisplayFor(awardModel => award.Staff.FullName)
            </td>
            <td>
                @Html.DisplayFor(awardModel => award.Num_Points)
            </td>
            <td>
                @Html.DisplayFor(awardModel => award.RewardCategory.Reward_Category)
            </td>
            <td>
                @Html.DisplayFor(awardModel => award.Reward_Comment)
            </td>
        </tr>
    }
</table>
