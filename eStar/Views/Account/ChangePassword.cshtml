@model eStar.ViewModels.ChangePasswordView
@using eStar.Security

@{
    ViewBag.Title = "ChangePassword";
}

@{ if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.Error
        </div>
    }
}

<h2>Change Your Password</h2>
<div class="alert alert-warning">
    <strong>Warning!</strong> By changing your password you will automatically be logged off and will have to log back in.
</div>

<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm("SetPassword", "Account", FormMethod.Post))
        {
            <h4>Change your account password for the email address: @SessionPersister.Email</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.OldPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>