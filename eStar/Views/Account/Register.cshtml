@model eStar.ViewModels.RegisterPasswordViewModel
@using eStar.Security

@{
    ViewBag.Title = "Register";
}

<h2>Register Your Password</h2>

<div class="row">
    <div class="col-md-6">
        @using(Html.BeginForm("SetPassword", "Account", FormMethod.Post))
        {
            <h4>Set your account password for the email address: @SessionPersister.Email</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new {@class="col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

